<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/fm_my_switch"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main_cotent_rl"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/x100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
   >
  <!-- showIn="@layout/activity_main" 展示在什么里面
   为滚动的布局设置layout_behavior属性后，这个布局会自动移动到Toolbar以下  -->
    <EditText
        android:id="@+id/fm_my_editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fm_my_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fm_my_editNote" />
</RelativeLayout>
