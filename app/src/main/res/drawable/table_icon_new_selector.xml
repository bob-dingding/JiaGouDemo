<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--被checked了，如：一个RadioButton可以被check了 -->
    <item android:drawable="@drawable/ic_nav_news_actived" android:state_checked="true" />
    <!-- 单击时的背景图片-->
    <item android:drawable="@drawable/ic_nav_news_actived" android:state_pressed="true" />
    <!--选中时的图片背景-->
    <item android:drawable="@drawable/ic_nav_news_actived" android:state_selected="true" />
    <item android:drawable="@drawable/ic_nav_news_normal" />
</selector>